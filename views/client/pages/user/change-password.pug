extends ../../layouts/default.pug
include ../../mixins/box-head.pug
include ../../mixins/sidebar.pug

block main
  .row.justify-content-center
    .col-md-6.col-lg-5
      +box-head(pageTitle)

  .dashboard
    .container
      .row
        +sidebar
        .col-md-6.col-lg-5(style="margin-left: 40px")
          .card.shadow-sm
            .card-body
              form(
                action="/user/profile/changePassword?_method=PATCH"
                method="POST"
              )
                .form-group.mb-3.position-relative
                  label(for="password" class="form-label") Mật khẩu mới
                  input(
                    type="text"
                    class="form-control"
                    name="password"
                    required
                  )

                .form-group.mb-3.position-relative
                  label(for="password" class="form-label") Xác nhận mật khẩu mới
                  input(
                    type="text"
                    class="form-control"
                    id="cpassword"
                    name="cpassword"
                    required
                  )

                .form-group.mb-4
                  button(
                    type="submit"
                    class="btn btn-primary btn-block"
                  ) Cập nhật