extends ../../layouts/default.pug

block main
    if(role.permissions.includes("blogs_edit"))
        h1(class="mb-4") Sửa bài viết

        form(
            action=`/${prefixAdmin}/blogs/edit/${blog.id}?_method=PATCH`
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
            label(for="title") Tiêu đề
            input(
                type="text"
                class="form-control"
                id="title"
                name="title"
                required
                value=blog.title
            )
            div(class="form-group")
                label(for="blog_category_id") Danh mục
                select(
                    name="blog_category_id"
                    class="form-control"
                    id="blog_category_id"
                )
                    option(value="") -- Chọn danh mục --
                    if(categories)
                        each item in categories
                            option(
                                value=item.id
                                selected=(item.id == blog.blog_category_id ? true : false)
                            ) #{item.title}

            div(class="form-group")
                label(for="desc") Mô tả
                textarea(
                    class="form-control"
                    id="desc"
                    name="description"
                    rows="5"
                    textarea-mce
                ) #{blog.description}
            
            div(
                class="form-group"
                upload-image
            )
                label(for="thumbnail") Ảnh
                input(
                    type="file"
                    class="form-control-file"
                    id="thumbnail"
                    name="thumbnail"
                    accept="image/*"
                    upload-image-input
                )
                img(
                    src=blog.thumbnail
                    class="image-preview"
                    upload-image-preview
                )
            div(class="form-group")
                label(for="position") Vị trí
                input(
                    type="number"
                    class="form-control"
                    id="position"
                    name="position"
                    placeholder="Tự động tăng"
                    min="1"
                    value=blog.position
                )
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusActive"
                    name="status"
                    value="active"
                    checked=(blog.status == "active" ? true : false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio"
                    class="form-check-input"
                    id="statusInActive"
                    name="status"
                    value="inactive"
                    checked = (blog.status == "inactive" ? true : false)
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="form-group")
                button(
                    type="submit"
                    class="btn btn-primary"
                ) Cập nhật