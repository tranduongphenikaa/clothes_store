extends ../../layouts/default.pug

block main
  h1(class="mb-4") Sửa quảng cáo

  form(
    action=`/${prefixAdmin}/adverts/edit/${advert.id}?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
  )
    div(class="form-group")
      label(for="title") Tiêu đề *
      input(
        type="text"
        class="form-control"
        id="title"
        name="title"
        required
        value=advert.title
      )
    div(class="form-group")
      label(for="desc") Mô tả
      textarea(
        class="form-control"
        id="desc"
        name="description"
        rows="5"
        textarea-mce
      ) #{advert.description}
    
    div(
      class="form-group"
      upload-image
    )
      label(for="image") Hình ảnh
      input(
        type="file"
        class="form-control-file"
        id="image"
        name="image"
        accept="image/*"
        upload-image-input
      )
      img(
        src=advert.image
        class="image-preview"
        upload-image-preview
      )

    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusActive"
        name="status"
        value="active"
        checked=(advert.status == "active" ? true : false)
      )
      label(for="statusActive" class="form-check-label") Hoạt động
    div(class="form-group form-check form-check-inline")
      input(
        type="radio"
        class="form-check-input"
        id="statusInActive"
        name="status"
        value="inactive"
        checked=(advert.status == "inactive" ? true : false)
      )
      label(for="statusInActive" class="form-check-label") Dừng hoạt động
    div(class="form-group")
      button(
        type="submit"
        class="btn btn-primary"
      ) Cập nhật