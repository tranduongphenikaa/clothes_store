extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        +box-head(pageTitle)
        .card.shadow-sm
          .card-body
            form(action="/user/login" method="POST")
              .form-group.mb-3
                label(for="email" class="form-label") Email
                input#email.form-control(
                  type="email"
                  name="email"
                  placeholder="Nhập email"
                  required
                )
              .form-group.mb-3.position-relative
                label(for="password" class="form-label") Mật khẩu
                
                input#passwordInput.form-control(
                  type="password"
                  name="password"
                  placeholder="Nhập mật khẩu"
                  passInput
                  required
                )
                span.eye-icon(
                  id="togglePassword" togglePassword
                )
                  i.fa.fa-eye(icon)
              .form-group.mb-4
                button.btn.btn-primary.btn-block(type="submit") Đăng nhập
            a(href="/user/password/forgot" class="d-block text-center mt-3 forgotPass") Quên mật khẩu?
