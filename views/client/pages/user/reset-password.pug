extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        +box-head(pageTitle)
        .card.shadow-sm
          .card-body
            form(
              action="/user/password/reset?_method=PATCH"
              method="POST"
            )
              .form-group.mb-3.position-relative
                label(for="password" class="form-label") Mật khẩu

                input#passwordInput.form-control(
                  type="password"
                  name="password"
                  placeholder="Nhập mật khẩu"
                  passInput
                  required
                )
                span.eye-icon(
                  id="togglePassword" togglePassword
                )
                  i.fa.fa-eye(icon)
                  
              .form-group.mb-4
                button(
                  type="submit"
                  class="btn btn-primary btn-block"
                ) Đổi mật khẩu