extends ../../layouts/default.pug
include ../../mixins/box-head.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        +box-head(pageTitle)
        .card.shadow-sm
          .card-body
            form(
              action="/user/password/forgot"
              method="POST"
            )
              .form-group.mb-3
                label(for="email") Email
                input(
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Nhập email"
                  required
                )
              .form-group.mb-4
                button(
                  type="submit"
                  class="btn btn-primary btn-block"
                ) Gửi mã OTP