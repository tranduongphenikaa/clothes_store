extends ../../layouts/auth.pug

block main
  .container.my-5
    .row.justify-content-center
      .col-md-6.col-lg-5
        h2(class="text-center") Đăng nhập
        .card.shadow-sm
          .card-body
            form(
              action=`/${prefixAdmin}/auth/login`
              method="POST"
            )
              .form-group.mb-3
                label(for="email") Email
                input(
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Nhập email"
                  required
                )
              .form-group.mb-3.position-relative
                  label(for="password") Mật khẩu
                  input#passwordInput.form-control(
                    type="password"
                    name="password"
                    placeholder="Nhập mật khẩu"
                    passInput
                    required
                  )
                  span.eye-icon(
                    id="togglePassword" togglePassword
                  )
                    i.fa.fa-eye(icon)
              .form-group.mb-4
                button(
                  type="submit"
                  class="btn btn-primary btn-block"
                ) Đăng nhập